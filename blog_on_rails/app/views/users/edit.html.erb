<h2>Edit User Details</h2>

<%= form_for @user do |f|%>

<% if @user.errors.present? %>
  <p><%= @user.errors.full_messages.join(', ') %></p>
  <% end %>
<div class="">
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: "form-control" %>
</div>
<div class="">
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: "form-control" %>
</div>

<div class="">
  <%= f.label :email %>
  <%= f.text_field :email, class: "form-control" %>
</div>
<br>
<div class="">
  <%= f.submit %>
</div>

<% end %>

