<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-expand navbar-primary bg-light">
    <a class="navbar-brand" href="<%= posts_path %>">Blog on Rails</a>
    <div class="collapse navbar-collapse flex-row-reverse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="<%= posts_path %>">Home<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_post_path %>">New Post</a>
        </li>
        <% if user_signed_in? %>
        <li class="nav-item">
          <a class="nav-link" href="<%= edit_user_path(current_user) %>"> Hello, <%= current_user.first_name %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= session_path %>" data-method="delete"> Sign Out</a>
        </li>
                <% else %>
                <li class="nav-item">
                  <a class="nav-link" href="<%= new_session_path %>"> Sign In</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%= new_user_path %>"> Sign Up</a>
                </li>
            <% end %>
      </ul>
    </div>
  </nav>

<% if flash[:notice].present? %>

<div class="alert alert-primary" role="alert">
  <%= flash[:notice] %>
</div>

<% end %>
<% if flash[:alert].present? %>

<div class="alert alert-primary" role="alert">
  <%= flash[:alert] %>
</div>

<% end %>



</div>
  <div class="container-fluid">
        <%= yield %>
      </div>
  </body>
</html>
