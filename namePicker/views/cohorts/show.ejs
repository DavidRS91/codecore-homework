<%- include('../partials/header') %>

<div class="card p-3 m-2">
  <div class="card-body">


  <h3 class="card-title"><strong><%= team.teamName %></strong></h3>
  <div class="post-content">
    <p class="card-text"><%= team.teamMembers %></p>
  </div>
  <br>

  <form action="/cohorts/<%= team.id %>" method="GET" >
  <br>

  <h4>Method</h4>

  <div class="form-check">
    <input class="form-check-input" type="radio" name="sortType" id="teamCount" value="Team Count" <%= sortType==="Team Count"? "checked" : "" %>>
    <label class="form-check-label" for="exampleRadios1">
      Team Count
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="sortType" id="numPerTeam" value="Number Per Team" <%= sortType==="Number Per Team"? "checked" : "" %>>
    <label class="form-check-label" for="exampleRadios2">
      Number per Team
    </label>
  </div>
  <br>
    <h4>Quantity</h4>
  <input class="form-control" name="num" type="text" placeholder="eg. 4" value="<%= num? num : "" %>">
  <br>
  <button type="submit" class="btn btn-outline-primary col-12">Assign Teams</button>
  </form>

  <% if (output !== undefined) { %>
    <hr>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Team Members</th>
    </tr>
  </thead>
  <tbody>
  <% let counter = 1 %>
  <% for (let o of output) {%>

    <tr>
      <th scope="row"><%= counter %></th>
      <td><%= o %></td>
      <% counter += 1 %>
    </tr>
    <% } %>
    </tbody>
    </table>
  <% } %>
</div>
</div>

<%- include('../partials/footer') %>
